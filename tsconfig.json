{
    // Visit https://aka.ms/tsconfig to read more about this file
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "outDir": "dist",
        "rootDir": "src",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "strict": true,
        "moduleResolution": "NodeNext"
    },
    "include": ["src/**/*", "i18n"],
    "exclude": ["node_modules", "dist"]
}
